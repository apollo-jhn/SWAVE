{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "TypeScript: Watch",
        "type": "shell",
        "command": "npx tsc --watch",
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$tsc-watch"],
        "isBackground": true,
        "presentation": {
          "reveal": "silent",
          "echo": true,
          "focus": false,
          "showReuseMessage": false
        }
      },
      {
        "label": "Tailwind CSS: Watch",
        "type": "shell",
        "command": "npx tailwindcss -i src/styles/main.css -o assets/css/main-compiled.css --watch",
        "group": {
          "kind": "build"
        },
        "isBackground": true,
        "presentation": {
          "reveal": "silent",
          "echo": true,
          "focus": false,
          "showReuseMessage": false
        }
      }
    ]
  }
  